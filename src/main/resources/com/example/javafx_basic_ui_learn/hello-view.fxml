<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_basic_ui_learn.HelloController">
    <top>
        <HBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Add Book" onAction="#handleAddItem"/>
            <Button text="New Transaction" onAction="#handleNewTransaction"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="bookTable">
            <columns>
                <TableColumn fx:id="columnTitle" text="Title"/>
                <TableColumn fx:id="columnGenre" text="Genre"/>
                <TableColumn fx:id="columnAuthor" text="Author"/>
                <TableColumn fx:id="columnQuantity" text="Quantity"/>
                <TableColumn fx:id="columnPublisher" text="Publisher"/>
                <TableColumn fx:id="columnPages" text="Pages"/>
                <TableColumn fx:id="columnDescription" text="Description"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
