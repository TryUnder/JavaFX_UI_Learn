<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.geometry.Insets?>
<GridPane fx:id="gridPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_basic_ui_learn.AddBookDialogController" hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Genre:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Publisher:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="publisherField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Pages:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="pagesField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Button text="Add" onAction="#handleAddBook" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Button text="Cancel" onAction="#handleCancel" GridPane.columnIndex="1" GridPane.rowIndex="7" />
</GridPane>
